<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="233dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_popup_like_view_bg">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_hug"
        android:layout_width="77dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_like_hug"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginStart="23dp"
            android:drawablePadding="4dp"
            android:drawableLeft="@mipmap/icon_comment_like_hug_default"
            android:textSize="12sp"
            android:textColor="#FFC1C1C1"
            tools:text="10"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider_0"
        android:layout_width="1dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toRightOf="@id/cl_hug"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFC1C1C1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ok"
        android:layout_width="77dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/divider_0">

        <TextView
            android:id="@+id/tv_like_ok"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="23dp"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:drawableLeft="@mipmap/icon_comment_like_ok_default"
            android:textSize="12sp"
            android:textColor="#FFC1C1C1"
            tools:text="10"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider_1"
        android:layout_width="1dp"
        android:layout_height="14dp"
        app:layout_constraintLeft_toRightOf="@id/cl_ok"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFC1C1C1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_like"
        android:layout_width="77dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/divider_1">

        <TextView
            android:id="@+id/tv_like_normal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="23dp"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:drawableLeft="@mipmap/icon_comment_like_like_default"
            android:textSize="12sp"
            android:textColor="#FFC1C1C1"
            tools:text="10"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>